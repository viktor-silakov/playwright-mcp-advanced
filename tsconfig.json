{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "lib",
    "tests",
    "node_modules"
  ]
}
